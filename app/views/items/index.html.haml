%h1 Big Bloomcaps
%ul.items
  - @big_items.each do |item|
    %li
      %h2= item.name
      = item.photo.url != "/photos/original/missing.png" ? image_tag(item.photo.url, width: "200px") : image_tag("b#{item.image}.jpg", width: "200px")
      %p.description= item.description.capitalize
      .price
        $ #{item.price}.00
      = form_tag cart_items_url do
        = submit_tag "Add to Cart", class: "btn add_to_cart"
        = hidden_field_tag :item, item.id
        %span{:style => "float: right;"}
          Qty:
          = number_field_tag :quantity, 1
      - if user_signed_in?
        .delete
          = link_to("Delete", item_url(item), method: :delete)

.clear

%hr 

