!!!
%html
  %head
    %title Bloomcaps
    = stylesheet_link_tag 'bootstrap'
    = render 'layouts/fonts'
    
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .topbar
      .fill
        .container
          %h3{:style => "font-family: Alex Brush; top: 3px;"}
            = link_to "Bloomcaps", root_url
          %ul
            %li= link_to "Home", root_url
            %li= link_to "About", about_url
            %li= link_to "Contact", contact_url
    .container
      = yield